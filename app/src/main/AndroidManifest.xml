<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.finderlo.weixzz">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!-- 用于调用 JNI -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:name=".base.WeiXzzApplication"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".ui.Login.LoadDataActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.Login.LoginActivity"/>

        <activity android:name=".ui.StatusDetail.StatusDetailActivity">
        </activity>
        <activity android:name=".ui.ImageDetailActivity">
            <intent-filter>
                <action android:name="image_detail"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.Mainview.MainViewActivity">
        </activity>

        <!--这些是测试用的activity-->
        <activity android:name=".ui.others.MainViewAcivity"/>
        <activity android:name=".ui.TestActivity"/>
        <!--微博sdk中的web视图-->
        <activity android:name="com.sina.weibo.sdk.component.WeiboSdkBrowser"/>
    </application>

</manifest>