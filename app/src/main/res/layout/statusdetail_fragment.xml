<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E91E63"
        android:minHeight="200dp"
        android:orientation="vertical"
        android:descendantFocusability="blocksDescendants">

        <com.finderlo.weixzz.View.AutoLinkTextView
            android:id="@+id/textview_statusdetail_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:focusable="false"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="测试微博内容"
            android:textSize="16sp"/>

        <com.finderlo.weixzz.View.AutoLinkTextView
            android:id="@+id/textview_statusdetail_retweeted_status_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:focusable="false"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:text="转发微博内容"
            android:textSize="16sp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/statusdetail_pic_count_one_imageview"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/user_default_pic"
            android:visibility="gone"/>

        <GridLayout
            android:id="@+id/statusdetail_pic_count_out_three_gridlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:visibility="gone">


            <ImageView
                android:id="@+id/statusdetail_pic_count_1_gridview_imageview"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:src="@drawable/user_default_pic"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/statusdetail_pic_count_2_gridview_imageview"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:src="@drawable/user_default_pic"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/statusdetail_pic_count_3_gridview_imageview"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:src="@drawable/user_default_pic"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/statusdetail_pic_count_4_gridview_imageview"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:src="@drawable/user_default_pic"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/statusdetail_pic_count_5_gridview_imageview"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:src="@drawable/user_default_pic"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/statusdetail_pic_count_6_gridview_imageview"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:src="@drawable/user_default_pic"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/statusdetail_pic_count_7_gridview_imageview"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:src="@drawable/user_default_pic"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/statusdetail_pic_count_8_gridview_imageview"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:src="@drawable/user_default_pic"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/statusdetail_pic_count_9_gridview_imageview"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:src="@drawable/user_default_pic"
                android:visibility="gone"/>


        </GridLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#FF4081"
            android:text="评论(不可用)"
            android:textSize="14sp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#FF4081"
            android:text="转发(不可用)"/>
    </LinearLayout>


</LinearLayout>
